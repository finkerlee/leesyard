<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.lijiadayuan.lishijituan.AddressItemActivity">
    <LinearLayout
        android:id="@+id/name_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="51px">
        <TextView
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:text="姓名:"
            android:layout_marginLeft="41px" />
        <TextView
            android:id="@+id/iv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name_title"
            android:textSize="40px"
            android:text="李国庆"/>
        <TextView
            android:id="@+id/nember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:layout_marginLeft="135px"
            android:text="手机号:" />
        <TextView
            android:id="@+id/iv_iphone"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nember"
            android:textSize="40px"
            android:text="1865111111" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44px"
        android:layout_below="@id/name_phone">
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:text="收货地址:"
            android:layout_marginLeft="41px" />
        <TextView
            android:id="@+id/iv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:text="北京市西城区月坛南街"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_below="@id/ly_address"
        android:gravity="center_vertical"
        android:id="@+id/layout_edit">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/delete"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="673px"
                android:layout_centerVertical="true">
                <ImageView
                    android:background="@drawable/delete"
                    android:layout_width="47px"
                    android:layout_height="47px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:layout_marginLeft="16px"
                    android:text="删除"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/iv_edit"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="873px"
                android:layout_centerVertical="true">

                <ImageView
                    android:background="@drawable/read"
                    android:layout_width="47px"
                    android:layout_height="47px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:layout_marginLeft="16px"
                    android:text="编辑"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b4b4b4"
        android:layout_below="@id/layout_edit"
        android:layout_marginTop="15dp"/>
</RelativeLayout>
