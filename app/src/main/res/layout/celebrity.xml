<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.lijiadayuan.lishijituan.AheadlinedataActivity">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ad6"
        android:padding="20dp"
        android:id="@+id/im_celebrity" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="牡丹名家"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/im_celebrity"
        android:layout_toEndOf="@+id/im_celebrity"
        android:id="@+id/celebrity_title" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/celebrity_title"
        android:layout_toRightOf="@+id/celebrity_title"
        android:layout_toEndOf="@+id/celebrity_title" />
    <TextView
        android:id="@+id/celebrith_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李谷一"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/celebrity_title"
        android:layout_toRightOf="@+id/celebrity_title"
        android:layout_toEndOf="@+id/celebrity_title"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />
</RelativeLayout>
