<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <include
        layout="@layout/common_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <EditText
            android:layout_width="900px"
            android:layout_height="126px"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="90px"
            android:layout_marginRight="90px"
            android:layout_marginTop="120px"
            android:hint="请输入用户名"
            android:paddingLeft="45px"
            android:textColor="@color/app_text_center_color"
            android:textColorHint="@color/app_text_shallow_color"
            android:textSize="16sp"
            android:id="@+id/et_yonghu_username" />
        <EditText
            android:id="@+id/et_yonghu_phonenum"
            android:layout_width="900px"
            android:layout_height="126px"
            android:layout_marginLeft="90px"
            android:layout_marginRight="90px"
            android:layout_marginTop="42px"
            android:paddingLeft="45px"
            android:textSize="49px"
            android:textColor="@color/app_text_center_color"
            android:textColorHint="@color/app_text_shallow_color"
            android:background="@drawable/rounded_edittext"
            android:hint="请输入您的手机号码" />

        <EditText
            android:id="@+id/et_yonghu_password"
            android:layout_width="900px"
            android:layout_height="126px"
            android:layout_marginLeft="90px"
            android:layout_marginRight="90px"
            android:layout_marginTop="42px"
            android:paddingLeft="45px"
            android:textSize="49px"
            android:textColor="@color/app_text_center_color"
            android:textColorHint="@color/app_text_shallow_color"
            android:background="@drawable/rounded_edittext"
            android:hint="请输入您的密码"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/et_yonghu_password2"
            android:layout_width="900px"
            android:layout_height="126px"
            android:layout_marginLeft="90px"
            android:layout_marginRight="90px"
            android:layout_marginTop="42px"
            android:paddingLeft="45px"
            android:textSize="49px"
            android:textColor="@color/app_text_center_color"
            android:textColorHint="@color/app_text_shallow_color"
            android:background="@drawable/rounded_edittext"
            android:hint="请再次输入您的密码"
            android:inputType="textPassword" />
/>


            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="90px"
            android:paddingRight="90px"
            >
            <EditText
                android:id="@+id/et_numpass"
                android:layout_width="579px"
                android:layout_height="126px"
                android:layout_marginTop="42px"
                android:paddingLeft="45px"
                android:textSize="49px"
                android:textColor="@color/app_text_center_color"
                android:textColorHint="@color/app_text_shallow_color"
                android:background="@drawable/rounded_edittext"
                android:hint="请输入验证码"
                android:inputType="number"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/getVerfication"
                android:layout_width="wrap_content"
                android:layout_height="126px"
                android:layout_marginTop="42px"
                android:textSize="49px"
                android:background="@drawable/rounded_rectangle_button"
                android:text="发送验证码"
                android:textColor="@color/color_white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42px"
            android:layout_marginLeft="90px"
            android:layout_marginRight="90px">
            <CheckBox
                android:id="@+id/task_info_list_button"
                android:layout_width="44.1px"
                android:layout_height="44.1px"
                android:button="@drawable/task_type_image_selector"
                android:layout_marginRight="42px"
                android:checked="false"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已经阅读并且同意"
                android:textSize="43px"
                android:textColor="@color/app_text_shallow_color"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:id="@+id/tx_XYuers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:text="用户协议"
                android:textSize="43px"
                android:textColor="#333333"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="774px"
        android:layout_height="132px"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_button_color"
        android:text="确认"
        android:textAlignment="center"
        android:id="@+id/btn_registration"
        android:textColor="#ffffff"
        android:textSize="43px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="264px"/>
</RelativeLayout>

