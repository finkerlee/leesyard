<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/mLayoutViewPage"
                android:layout_width="match_parent"
                android:layout_height="528px"
                >



                <android.support.v4.view.ViewPager
                    android:id="@+id/viewflow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:clipToPadding="true"
                    android:layout_alignParentBottom="true"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/indexpoint_parent"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    >
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/head_message"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:background="#ffffff"
                >
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:background="@drawable/notice_icon1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px" />
                <TextView
                    android:layout_width="3px"
                    android:layout_height="match_parent"
                    android:background="#cccccc"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:text="李氏福利"
                    android:background="@drawable/rounded_button_red_stoke_white_soild"
                    android:textSize="36px"
                    android:gravity="center"
                    android:paddingLeft="10px"
                    android:paddingRight="10px"
                    android:textColor="@color/app_bg_main_red"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12px"

                    />

                <ViewFlipper
                    android:id="@+id/homepage_notice_vf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12px"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_marginRight="15px"
                    android:background="@color/color_white"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_text_heigh_color"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30px"
                android:paddingBottom="30px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李氏福利社"
                    android:textColor="@color/app_text_heigh_color"
                    android:textStyle="bold"
                    android:textSize="36px"
                    android:layout_marginLeft="72px"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="30px"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more"
                    android:layout_alignBottom="@+id/textView20"
                    android:layout_alignRight="@+id/iv_image"
                    android:layout_alignEnd="@+id/iv_image"
                    android:layout_marginRight="60px"
                    android:id="@+id/iv_more" />
            </LinearLayout>
            <com.lijiadayuan.lishijituan.view.MyGrideView
                android:id="@+id/mGridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:horizontalSpacing="21px"
                android:verticalSpacing="21px"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:paddingLeft="60px"
                android:paddingRight="60px"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30px"
                android:paddingBottom="30px"
                android:paddingLeft="60px"
                android:paddingRight="60px"
                >
                <ImageView
                    android:id="@+id/iv_ticket"
                    android:layout_width="0px"
                    android:layout_height="268px"
                    android:background="@drawable/ticket"
                    android:layout_weight="1"
                    />
                <View
                    android:layout_width="24px"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:id="@+id/iv_red"
                    android:layout_width="0px"
                    android:layout_height="268px"
                    android:background="@drawable/red_packet"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常用工具"
                android:textColor="@color/app_text_heigh_color"
                android:textStyle="bold"
                android:textSize="36px"
                android:layout_marginLeft="72px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="60px"
                android:paddingRight="60px"
                android:paddingBottom="30px"
                android:paddingTop="30px"
                >
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/lee_culture"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/culture"
                    app:roundedCornerRadius="5dp"
                    app:roundingBorderWidth="1dp"
                    app:roundingBorderColor="#cccccc"
                    />

                <!--app:roundedCornerRadius="5dp"-->
                <!--app:roundingBorderWidth="1dp"-->
                <!--app:roundingBorderColor="#747474"-->
                <View
                    android:layout_width="20px"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/luKongRescus"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="0dp"
                    android:background="@drawable/rescue"
                    app:roundedCornerRadius="5dp"
                    app:roundingBorderWidth="1dp"
                    app:roundingBorderColor="#cccccc"
                    />
                <View
                    android:layout_width="20px"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/shareResources"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="0dp"
                    android:background="@drawable/resource"
                    app:roundedCornerRadius="5dp"
                    app:roundingBorderWidth="1dp"
                    app:roundingBorderColor="#cccccc"
                    />
                <View
                    android:layout_width="20px"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/lee_black_list"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/blacklist"
                    app:roundedCornerRadius="5dp"
                    app:roundingBorderWidth="1dp"
                    app:roundingBorderColor="#cccccc"
                    />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:paddingTop="30px"

        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="58px"
            android:layout_height="58px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:id="@+id/iv_address"
            android:background="@drawable/location"/>
        <RelativeLayout
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="58px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/search_edittext_shape"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_marginLeft="40px"
                android:background="@drawable/search_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="搜索李家大院"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:textSize="36px"
                android:textColor="@color/app_text_heigh_color"
                android:textColorHint="@color/app_text_shallow_color"
                />
        </RelativeLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_message"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:background="@drawable/news" />
    </LinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
