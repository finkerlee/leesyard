<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >

                <com.lijiadayuan.lishijituan.ViewFlow
                    android:id="@+id/viewflow"
                    android:layout_width="match_parent"
                    android:layout_height="528px"
                    android:fitsSystemWindows="true"
                    android:clipToPadding="true"
                    android:layout_alignParentBottom="true"
                    />
                <com.lijiadayuan.lishijituan.CircleFlowIndicator
                    android:id="@+id/viewflowindic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="99px"
                    android:layout_marginBottom="15px"
                    android:padding="2dip"
                    app:activeColor="#ffffff"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    app:activeType="fill"
                    app:circleSeparation="18dip"
                    app:inactiveColor="#5effffff"
                    app:inactiveType="fill"
                    app:radius="4dip" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                />
            <LinearLayout
                android:id="@+id/head_message"
                android:layout_width="match_parent"
                android:layout_height="92px"
                android:background="#ffffff"
                >
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:background="@drawable/notice_icon1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px" />
                <TextView
                    android:layout_width="3px"
                    android:layout_height="match_parent"
                    android:background="#cccccc"/>
                <ImageView
                    android:layout_width="136px"
                    android:layout_height="52px"
                    android:layout_marginLeft="15px"
                    android:src="@drawable/li_welfare"
                    android:id="@+id/imageView2"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center" />

                <ViewFlipper
                    android:id="@+id/homepage_notice_vf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24px"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_marginRight="15px"
                    android:background="@color/color_white"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#cccccc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李氏福利社"
                    android:textColor="#696969"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="30px"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more"
                    android:layout_alignBottom="@+id/textView20"
                    android:layout_alignRight="@+id/iv_image"
                    android:layout_alignEnd="@+id/iv_image"
                    android:id="@+id/iv_more" />
            </LinearLayout>
            <com.lijiadayuan.lishijituan.view.MyGrideView
                android:id="@+id/mGridView"
                android:layout_width="wrap_content"
                android:layout_height="830px"
                android:numColumns="3"
                android:horizontalSpacing="5dip"
                android:verticalSpacing="5dip"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="288px"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >
                <ImageView
                    android:id="@+id/iv_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ticket"
                    android:layout_weight="1"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:id="@+id/iv_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_packet"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常用工具"
                android:textColor="#696969"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp"
                >
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/lee_culture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/culture"
                    app:roundedCornerRadius="5dp"
                    app:roundingBorderWidth="1dp"
                    app:roundingBorderColor="#cccccc"
                    />

                <!--app:roundedCornerRadius="5dp"-->
                <!--app:roundingBorderWidth="1dp"-->
                <!--app:roundingBorderColor="#747474"-->
                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/luKongRescus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/rescue"
                    app:roundedCornerRadius="5dp"
                    app:roundingBorderWidth="1dp"
                    app:roundingBorderColor="#cccccc"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/shareResources"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/resource"
                    app:roundedCornerRadius="5dp"
                    app:roundingBorderWidth="1dp"
                    app:roundingBorderColor="#cccccc"
                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/lee_black_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/blacklist"
                    app:roundedCornerRadius="5dp"
                    app:roundingBorderWidth="1dp"
                    app:roundingBorderColor="#cccccc"
                    />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:paddingTop="30px"

        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="58px"
            android:layout_height="58px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:id="@+id/iv_address"
            android:background="@drawable/location"/>
        <RelativeLayout
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="57px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/search_edittext_shape"
            android:alpha="70"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_marginLeft="40px"
                android:background="@drawable/search_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="搜索李家大院"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:textSize="36px"
                android:textColor="@color/app_text_heigh_color"

                />
        </RelativeLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_message"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:background="@drawable/news" />
    </LinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
