<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lijiadayuan.lishijituan.ProductBaseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:orientation="vertical">

                <com.lijiadayuan.lishijituan.ViewFlow
                    android:id="@+id/viewflow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:clipToPadding="true"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#00000000"
                    android:gravity="center"
                    android:padding="3dip"></FrameLayout>

                <com.lijiadayuan.lishijituan.CircleFlowIndicator
                    android:id="@+id/viewflowindic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:padding="2dip"
                    app:activeColor="#ff0000"
                    app:activeType="fill"
                    app:circleSeparation="20dip"
                    app:inactiveColor="#ffffff"
                    app:inactiveType="fill"
                    app:radius="4dip" />

            </FrameLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="拉菲古堡干红葡萄酒"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_goods_name" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品剩余数量:"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/textView8"
                        android:layout_alignTop="@+id/tv_goods_spec"
                        android:layout_toLeftOf="@+id/tv_goods_num"
                        android:layout_toStartOf="@+id/tv_goods_num" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一级庄 1982年份 正牌"
                        android:layout_below="@+id/tv_goods_name"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_goods_spec" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="份"
                        android:layout_alignTop="@+id/tv_goods_num"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="53dp"
                        android:layout_marginEnd="53dp"
                        android:id="@+id/textView10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_goods_num"
                        android:layout_alignTop="@+id/textView8"
                        android:layout_toLeftOf="@+id/textView10"
                        android:layout_toStartOf="@+id/textView10"
                        android:textColor="#ff0000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#b4b4b4"
                        android:layout_gravity="left|center_vertical"
                        android:layout_below="@+id/textView8"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/textView11" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/textView12"
                        android:layout_alignTop="@+id/tv_goods_price"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36800.00"
                        android:textColor="#ff0000"
                        android:padding="10dp"
                        android:id="@+id/tv_goods_price"
                        android:layout_alignTop="@+id/textView11"
                        android:layout_toRightOf="@+id/textView12"
                        android:layout_toEndOf="@+id/textView12" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#b4b4b4"
                        android:layout_gravity="left|center_vertical"
                        android:layout_below="@+id/textView12"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
                <WebView
                    android:id="@+id/WebView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
        </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/common_title_no"
        android:id="@+id/include11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="#ffffff"
        android:alpha="90"
        >
        <Button
            android:id="@+id/i_want_receive"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_button_color"
            android:text="我要领取"
            android:textColor="@color/color_white"
            android:textAlignment="center"
            />
    </LinearLayout>


</RelativeLayout>
