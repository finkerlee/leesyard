<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lijiadayuan.lishijituan.OrderActivity">

    <include
        android:id="@+id/include14"
        layout="@layout/common_title" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/colour_bar" />

    <RelativeLayout
        android:id="@+id/rl_order_addresslayout"
        android:layout_width="match_parent"
        android:layout_height="230px"
        android:paddingTop="48px"
        android:paddingLeft="43px"
        >

        <TextView
            android:id="@+id/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="姓名："
            android:textSize="40px"
            android:textColor="@color/app_text_heigh_color"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/TextView"
            android:textSize="40px"
            android:textColor="@color/app_text_heigh_color"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码:"
                android:textSize="40px"
                android:textColor="@color/app_text_heigh_color"/>

            <TextView
                android:id="@+id/iv_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="40px"
                android:textColor="@color/app_text_heigh_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp"
            android:layout_below="@id/TextView"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址:"
                android:textSize="40px"
                android:textColor="@color/app_text_heigh_color" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="40px"
                android:textColor="@color/app_text_heigh_color" />
        </LinearLayout>

        <ImageView
            android:id="@+id/mImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="55px"
            android:layout_marginRight="43px"
            android:src="@drawable/arrows" />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/colour_bar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b9b9b9"
        android:layout_marginTop="20dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="370px"
        android:padding="44px"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/goods_pic"
            android:layout_width="321px"
            android:layout_height="285px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            fresco:roundingBorderWidth="1dp"
            fresco:roundedCornerRadius="5dp"
            fresco:roundingBorderColor="#969696"
            />
        <LinearLayout
            android:id="@+id/give_layout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/goods_pic"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:layout_centerVertical="true"

            >
            <TextView
                android:id="@+id/give_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浪漫可旋转的八音盒"
                android:layout_marginTop="14px"
                android:textStyle="bold"
                android:textColor="@color/app_text_heigh_color"
                android:textSize="43px"
                />

            <TextView
                android:id="@+id/give_english_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BELA DESINGN"
                android:textStyle="bold"
                android:textColor="@color/app_text_heigh_color"
                android:textSize="43px"
                />


            <TextView
                android:id="@+id/give_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:layout_marginTop="5dp"
                android:textSize="29px"
                android:textColor="@color/app_text_heigh_color"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/give_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥168"
                android:textSize="49px"
                android:layout_marginTop="46px"
                android:textColor="@color/app_text_heigh_color"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buy_layout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/goods_pic"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/buy_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="浪漫可旋转的八音盒"
                android:layout_marginTop="14px"
                android:textStyle="bold"
                android:textSize="43px"
                android:textColor="@color/app_text_heigh_color"
                />
            <TextView
                android:id="@+id/buy_english_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BELA DESINGN"
                android:textStyle="bold"
                android:textSize="43px"
                android:textColor="@color/app_text_heigh_color"
                />
            <View
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="0dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/jian"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="-"
                    android:gravity="center"
                    android:background="@drawable/add_btn_bg"
                    android:translationX="2dp"
                    />
                <TextView
                    android:id="@+id/buy_goods_num"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:text="1"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:background="@drawable/goods_num_btn_bg"
                    />
                <TextView
                    android:id="@+id/jia"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="＋"
                    android:gravity="center"
                    android:background="@drawable/reduce_btn_bg"
                    android:layout_marginLeft="-2dp"
                    />

                <TextView
                    android:id="@+id/buy_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="￥168"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b9b9b9"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送方式"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            />




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/express_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递默认为在线支付"
                android:textColor="#ea5959"
                android:textSize="49px"
                />

            <LinearLayout
                android:id="@+id/layout_express"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="27px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流费用："
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/express_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b9b9b9"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:textSize="49px"
            android:layout_marginLeft="44px"
            android:layout_marginTop="44px"
            android:textStyle="bold"
            android:textColor="@color/app_text_heigh_color"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout5"
            android:layout_marginLeft="70px"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/tv_ali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/alipay"
                android:text="支付宝支付"
                android:textSize="49px"
                android:drawablePadding="26px"
                android:textColor="@color/app_text_heigh_color"
                android:layout_marginBottom="5dp"/>


            <TextView
                android:id="@+id/tv_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ali"
                android:layout_weight="1"
                android:drawableLeft="@drawable/wechatpay"
                android:textColor="@color/app_text_heigh_color"
                android:drawablePadding="26px"
                android:text="微信支付"
                android:textSize="49px"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                >
                <RadioButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/rb_ali"
                    android:background="@drawable/radio_"
                    android:button="@null"
                    android:checked="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/rb_wechat"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_"
                    android:button="@null"
                    android:layout_alignBaseline="@id/tv_wechat"
                    />
            </RadioGroup>

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="44px"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b9b9b9"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancle"
            android:text="取消"
            android:textColor="#000000"
            android:background="@drawable/rounded_button_color_white"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/be_sure"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_button_color"
            />
    </LinearLayout>

</LinearLayout>
